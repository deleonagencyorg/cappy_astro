---
import { t } from '../../i18n/i18n';
import type { Locale } from '../../i18n/i18n';

const langFromUrl = (Astro.url.pathname.split('/')[1] || 'es') as Locale;
const currentLang: Locale = langFromUrl === 'en' ? 'en' : 'es';

const section = t('home.back_to_school', { namespace: 'common', locale: currentLang }) || {};
const title = section.title || (currentLang === 'es' ? '¡Back to School\ncon Cappy!' : 'Back to School\nwith Cappy!');
const description = section.description || (currentLang === 'es' ? 'Vive el regreso a clases con la energía de Cappy. ¡Regístrate y participa!' : 'Get ready for school with Cappy energy. Sign up and join!');
const stepsTitle = section.stepsTitle || (currentLang === 'es' ? 'Pasos para participar' : 'How to join');
const steps = Array.isArray(section.steps) ? section.steps : [];
const buttonText = section.buttonText || (currentLang === 'es' ? 'Registrarme' : 'Sign up');
const buttonUrl = section.buttonUrl || (currentLang === 'es' ? '/es/yummiesone' : '/en/yummiesone');
---

<section class="w-full bg-yellow py-8 md:py-14">
  <div class="max-w-6xl mx-auto px-4">
    <div class="rounded-[32px] bg-red text-white overflow-hidden shadow-xl">
      <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/2 bg-red px-6 md:px-10 py-8 md:py-12 flex flex-col justify-center">
          <h2 class="font-title text-3xl md:text-4xl lg:text-5xl font-black leading-tight mb-4">
            {title.split('\n')[0]}
            {title.split('\n')[1] && <span class="block">{title.split('\n')[1]}</span>}
          </h2>
          <p class="text-sm md:text-base lg:text-lg max-w-md">
            {description}
          </p>
        </div>

        <div class="w-full md:w-1/2 bg-yellow px-6 md:px-10 py-8 md:py-12 flex flex-col justify-between gap-6">
          <div class="space-y-4">
            {stepsTitle && (
              <p class="font-title text-lg md:text-xl font-black text-black">{stepsTitle}</p>
            )}

            {steps.map((s: any, idx: number) => (
              <div class="flex items-start gap-3 md:gap-4">
                <div class="flex-shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-full bg-red text-white flex items-center justify-center text-sm md:text-base font-bold">
                  {idx + 1}
                </div>
                <div class="text-xs md:text-sm lg:text-base text-black leading-snug md:leading-normal">
                  <span class="font-bold">{s.title}</span>
                  {s.description && <span class="block mt-1">{s.description}</span>}
                </div>
              </div>
            ))}
          </div>

          <div class="mt-4 md:mt-6">
            <a
              href={buttonUrl}
              class="inline-flex items-center justify-center w-full md:w-auto px-8 py-3 rounded-full bg-red hover:bg-red/90 text-white text-sm md:text-base font-bold tracking-wide shadow-md hover:shadow-lg transition-all duration-200"
            >
              {buttonText}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
