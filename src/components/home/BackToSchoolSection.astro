---
import { t } from '../../i18n/i18n';
import type { Locale } from '../../i18n/i18n';
import LazyImage from '../common/LazyImage.astro';

const langFromUrl = (Astro.url.pathname.split('/')[1] || 'es') as Locale;
const currentLang: Locale = langFromUrl === 'en' ? 'en' : 'es';

const section = t('home.back_to_school', { namespace: 'common', locale: currentLang }) || {};
const title = section.title || (currentLang === 'es' ? '¡Back to School\ncon Cappy!' : 'Back to School\nwith Cappy!');
const description = section.description || (currentLang === 'es' ? 'Vive el regreso a clases con la energía de Cappy. ¡Regístrate y participa!' : 'Get ready for school with Cappy energy. Sign up and join!');
const stepsTitle = section.stepsTitle || (currentLang === 'es' ? 'Pasos para participar' : 'How to join');
const steps = Array.isArray(section.steps) ? section.steps : [];
const buttonText = section.buttonText || (currentLang === 'es' ? 'Registrarme' : 'Sign up');
const buttonUrl = section.buttonUrl || (currentLang === 'es' ? '/es/yummiesone' : '/en/yummiesone');
const leftImage = section.leftImage || 'https://via.placeholder.com/640x480.png?text=Back+to+School+con+Cappy';
---

<section class="w-full bg-yellow py-12 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <div class="rounded-[32px] bg-yellow border-orange border-1 shadow-xl overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
        <div class="w-full bg-yellow flex items-center justify-center p-0">
          <LazyImage 
            src="https://snack.yummiespromociones.com/SnacksyummiesAssets/bannerbts.jpg" 
            alt="Back to school con Cappy" 
            class="w-full h-full object-contain max-h-[400px] md:max-h-none" 
            loading="lazy" 
          />
        </div>

        <div class="w-full bg-yellow px-6 md:px-10 py-8 md:py-12 flex flex-col justify-center gap-6">
          <div class="space-y-4">
            {stepsTitle && (
              <p class="font-title text-lg md:text-xl font-black text-[#1E1B4B]">{stepsTitle}</p>
            )}

            {steps.map((s: any, idx: number) => (
              <div class="flex items-start gap-3 md:gap-4">
                <div class="flex-shrink-0 w-8 h-8 md:w-10 md:h-10 rounded-full bg-blue text-white border-2 border-red flex items-center justify-center text-sm md:text-base font-bold">
                  {idx + 1}
                </div>
                <div class="text-xs md:text-sm lg:text-base text-[#1E1B4B] leading-snug md:leading-normal">
                  <span class="font-bold">{s.title}</span>
                  {s.description && <span class="block mt-1">{s.description}</span>}
                </div>
              </div>
            ))}
          </div>

          <div class="mt-2 md:mt-4">
            <a
              href={buttonUrl}
              class="inline-flex items-center justify-center w-full md:w-auto px-8 py-3 rounded-full bg-blue hover:bg-blue text-white text-sm md:text-base font-bold tracking-wide shadow-md hover:shadow-lg transition-all duration-200"
            >
              {buttonText}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
